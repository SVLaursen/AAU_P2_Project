<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/topBG"
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/profile_top_bg" />

    <ImageView
        android:id="@+id/portrait"
        android:layout_width="97dp"
        android:layout_height="86dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:scaleType="fitCenter"
        android:src="@drawable/profile_portrait" />

    <TextView
        android:id="@+id/nameArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/portrait"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_bold"
        android:text="TEST BRUGER"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/resultsButton"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/resultat_button" />

    <ImageButton
        android:id="@+id/graphButton"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="153dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/graf_button" />

    <ImageButton
        android:id="@+id/statisticButton"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/statistik_button" />

</RelativeLayout>