<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/insulinInputDialog"
        android:layout_width="273dp"
        android:layout_height="412dp"
        android:layout_centerInParent="true"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:srcCompat="@drawable/input_insuling_dialog_background" />


    <ImageButton
        android:id="@+id/cancelButton"
        android:layout_width="112dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="167dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.048"
        app:srcCompat="@drawable/fortryd_button" />

        <ImageButton
            android:id="@+id/okButton"
            android:layout_width="112dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/cancelButton"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="180dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ok_button" />

    <ImageView
        android:id="@+id/timeInput_Background"
        android:layout_width="247dp"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        app:srcCompat="@drawable/exercise_input_textbox" />

    <EditText
        android:id="@+id/timeInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cancelButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-167dp"
        android:ems="10"
        android:textColorHint="@color/colorBackground"
        android:textColor="@color/colorWhite"
        android:hint="Indtast Tid i MInutter"
        android:inputType="number"
        android:maxLength="3" />

    <TextView
        android:id="@+id/testView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/timeInput"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="168dp"
        android:text="" />

</RelativeLayout>