<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:color="@color/colorYellow"
    android:orientation="vertical"
    tools:background="@color/colorYellow">

    <TextView
        android:id="@+id/sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:autoSizeTextType="none"
        android:text="Er du sikker pÃ¥ du vil                                       slette dine data?"
        android:textAllCaps="true"
        android:textAppearance="@style/CustomTextAppearance"
        android:textColor="@color/colorDarkGrey" />

    <ImageButton
        android:id="@+id/yes"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:scaleX="0.75"
        android:scaleY="0.75"
        android:layout_alignStart="@+id/sure"
        android:layout_alignTop="@+id/no"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/profile_data_yes" />

    <ImageButton
        android:id="@+id/no"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:scaleX="0.75"
        android:scaleY="0.75"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/sure"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/profile_data_no" />
</RelativeLayout>