<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalendarFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/topBG"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/profile_top_bg" />

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="80dp"
        app:mcv_tileHeight="55dp"
        app:mcv_tileWidth="50dp"
        app:mcv_headerTextAppearance="@style/MonthTextAppearance"
        app:mcv_selectionColor="@color/colorLightBlue"
        app:mcv_weekDayTextAppearance="@style/DayTextAppearance"
        app:mcv_dateTextAppearance="@style/CustomTextAppearance"
        app:mcv_arrowColor="@color/colorDarkBlue"
        app:mcv_showOtherDates="all"

        />


</FrameLayout>
